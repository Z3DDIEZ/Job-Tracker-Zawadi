{
  "name": "job-application-tracker",
  "version": "2.2.0",
  "description": "A data-driven job search assistant - Personal productivity platform with full-stack capabilities",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "lint": "eslint . --ext .ts,.js",
    "lint:fix": "eslint . --ext .ts,.js --fix",
    "format": "prettier --write \"**/*.{ts,js,json,css,html}\"",
    "format:check": "prettier --check \"**/*.{ts,js,json,css,html}\"",
    "prepare": "husky install"
  },
  "keywords": [
    "job-tracker",
    "productivity",
    "firebase",
    "typescript",
    "data-visualization"
  ],
  "author": "Zawadi MC Nyachiya",
  "license": "MIT",
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@typescript-eslint/eslint-plugin": "^6.13.0",
    "@typescript-eslint/parser": "^6.13.0",
    "@vitest/ui": "^1.0.4",
    "eslint": "^8.54.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.1",
    "husky": "^8.0.3",
    "prettier": "^3.1.0",
    "typescript": "^5.3.2",
    "vite": "^5.0.5",
    "vitest": "^1.0.4"
  },
  "dependencies": {
    "chart.js": "^4.4.0",
    "@nanostores/persistent": "^0.9.0",
    "nanostores": "^0.9.0",
    "motion": "^10.16.4"
  }
}
